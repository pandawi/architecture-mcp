{
    "architecture": {
      "services": [
        {
          "name": "ServiceItems",
          "description": "Handles items data, like listing items, adding new items, etc.",
          "connectedServices": ["ServiceUsers", "Database"],
          "apis": [
            {
              "endpoint": "/items",
              "method": "GET",
              "description": "list all the available items and their details",
              "dependencies": ["Database", "ServiceUsers"],
              "responseExample": {
                "name": "milk",
                "price": 10,
                "sellerId": 1,
                "sellerName": "John Doe"
              }
            },
            {
              "endpoint": "/item",
              "method": "POST",
              "description": "Create new item",
              "dependencies": ["Database"],
              "responseExample": {
                "message": "Item created successfully"
              }
            },
            {
                "endpoint": "/item/:id",
                "method": "PATCH",
                "description": "Update the item price by item id",
                "dependencies": ["Database"],
                "responseExample": {
                  "message": "Item updated successfully"
                }
              }
          ]
        },
        {
          "name": "ServiceUsers",
          "description": "Handles user data processing.",
          "connectedServices": ["Database"],
          "apis": [
            {
              "endpoint": "/users",
              "method": "GET",
              "description": "Fetches all users data.",
              "dependencies": ["Database"],
              "responseExample": { 
                "users": [
                    {
                        "id": 1,
                        "name": "John Doe"
                    }
                ]
              }
            }
          ]
        },
        {
            "name": "UI_DashboardService",
            "description": "Displays all the items and users data.",
            "connectedServices": ["ServiceItems"]
        }
      ],
      "databases": [{
        "name": "SystemDB",
        "type": "PostgreSQL",
        "description": "Stores users and items data.",
        "connectedServices": ["ServiceItems", "ServiceUsers"],
        "tables": [
          {
            "name": "users",
            "columns": ["id", "name"]
          },
          {
            "name": "items",
            "columns": ["id", "name", "price", "sellerId"]
          }
        ]
      }]
    }
  }
  